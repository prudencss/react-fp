{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "assets/*": ["assets/*"],
      "constants/*": ["constants/*"],
      "enums/*": ["enums/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".storybook",
    "src/stories",
    "src/setupTests.ts"
  ]
}
